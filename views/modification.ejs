<!DOCTYPE html>
<html lang='fr'>
<head>
    <title>FEpdf - Modification</title>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="stylesheets/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="stylesheets/MainWin.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>
<body class="animate-in">
<div class="navbar navbar-default navbar-static-top">
    <div class="container">
        <div class="row text-center">
            <div class="navbar-brand">
                <img src="images/logo.svg" alt="logo" width="50"></img>
            </div>
            <div class="navbar-navbar" ><h2>Modification</h2></div>
        </div>

    </div>
</div>
</div>
<div class="container col-sm-10 col-sm-offset-1">
    <div class="row well">





        <div class="col-sm-6 text-center" >
            <div>

                <div class="row col-sm-4">
                    <form>
                        <div class="input-group form-group">
                            <input type="text" class="form-control" placeholder="Search">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit">
                                    <i class="glyphicon glyphicon-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="col-sm-12 text-left" style="overflow-y:scroll;height:400px;">



                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="email">Nom :</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </form>


                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="email">Prénom :</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </form>


                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="email">Age :</label>

                        </div>
                    </form>


                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="email">Prénom :</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </form>

                    <form class="text-center">
                        <div>
                            <div class="btn-group" data-toggle="buttons" >
                                <label class="btn btn-lg btn-default" id="btnPencil">
                                    <input type="checkbox" autocomplete="off" class="" onclick="active('btnPencil');cPencil();" ><i class="glyphicon glyphicon-pencil"></i>
                                </label>
                            </div>
                            <div class="text-center">
                                Ajouter une nouvelle zone d'insertion
                            </div>
                        </div>
                    </form>

                    <script type="text/javascript">
                        function active(thingID)
                        {
                            element = document.getElementById(thingID);
                            if(element.className == "btn btn-lg btn-default")
                                element.className = 'btn btn-lg btn-primary';
                            else
                                element.className = 'btn btn-lg btn-default';
                        }

                        function cPencil()
                        {
                            if(document.body.style.cursor == "auto")
                                document.body.style.cursor = "crosshair";
                            else
                                document.body.style.cursor = "auto";
                        }
                    </script>

                </div>




            </div>


            <hr>
            <div class="text-left">
                Enregistrer dans le repertoire:
                <form>
                    <div class="input-group" style="margin-bottom:2.5%;">
                        <input type="text" class="form-control" placeholder="Chemin vers fichier">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="file">
                                Parcourir
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div></div>
            <div class="row progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:70%">
                    <span class="sr-only">70% Complete</span>
                </div>
            </div>
            <div class="row">
                <button type="button" class="btn btn-lg btn-primary " style="margin-left:10%;margin-right:10%;">Annuler</button>
                <button type="button" class="btn btn-lg btn-primary " style="margin-left:10%;margin-right:10%;" onclick="alertSave()">Valider</button>
            </div>

        </div>








        <div class="col-md-6 visible-md visible-lg" style="text-align:center;">

            <div class="row text-right">
                <button type="button" class="btn btn-lg btn-primary" style="margin-left:5%;margin-right:5%;"><i class="glyphicon glyphicon glyphicon-refresh"></i></button>
            </div>

            <div>
                <img src="images/No_PDF.png" class="img-rounded" alt="No_PDF" width=80% height=120%>
            </div>

            <div class="row">
                <button type="button" class="btn btn-lg btn-primary " style="margin-left:5%;margin-right:5%;"><i class="glyphicon glyphicon glyphicon-arrow-left"></i></button>
                <button type="button" class="btn btn-lg btn-primary " style="margin-left:5%;margin-right:5%;">Selectionner</button>
                <button type="button" class="btn btn-lg btn-primary " style="margin-left:5%;margin-right:5%;"><i class="glyphicon glyphicon glyphicon-arrow-right"></i></button>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
</div>
<script src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' type="text/	javascript"></script>
<script src='js/bootstrap.js'></script>
